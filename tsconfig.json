{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native", // This is already added for React Native
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "esModuleInterop": true, // Add this line for ES module interop
    "allowSyntheticDefaultImports": true // Add this line to allow default imports
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "typeRoots": [
    "./types"
  ]
}